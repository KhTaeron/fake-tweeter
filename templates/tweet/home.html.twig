{% extends 'base.html.twig' %}

{% block title %}Explorer les Tweets{% endblock %}

{% block body %}
<h1>Explorer les Tweets</h1>

<form method="get" action="{{ path('tweets_home') }}">
    <input type="text" name="q" placeholder="Rechercher un mot..." value="{{ keyword }}">
    <button type="submit">Rechercher</button>
</form>

{% if tweets is empty %}
    <p>Aucun tweet trouv√©.</p>
{% else %}
    <ul>
        {% for tweet in tweets %}
            <li>
                <strong>{{ tweet.tweeter is defined and tweet.tweeter.pseudo is defined ? tweet.tweeter.pseudo : 'Utilisateur inconnu' }}</strong> 
                {{ tweet.content }}<br>
                <small>{{ tweet.publicationDate|date('d/m/Y H:i') }}</small>
            </li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}
